<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hi.musicplayer.AlbumClickListener">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/album"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of albums"
            android:textAllCaps="true"
            android:textColor="#b7eeec"
            android:textSize="20sp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeh jawani hai diwani"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:textColor="#b7b9ee"
        android:layout_marginBottom="16dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Babbal rai album"
        android:textSize="25sp"
        android:textColor="#b7b9ee"
        android:layout_marginBottom="16dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapoor and sons album"
        android:textSize="25sp"
        android:textColor="#b7b9ee"
        android:layout_marginBottom="16dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="254a album"
        android:textSize="25sp"
        android:textColor="#b7b9ee"
        android:layout_marginBottom="16dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jassi album"
        android:textSize="25sp"
        android:textColor="#b7b9ee"
        android:layout_marginBottom="16dp" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc album"
        android:textSize="25sp"
        android:textColor="#b7b9ee"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
</RelativeLayout>
</ScrollView>